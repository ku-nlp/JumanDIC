# Wikipedia を特殊化する(JUMAN用)
wikipediadic/jumandic.da: wikipediadic/wikipedia.dic
	sh $(SCRIPT_DIR)/update.sh -d wikipediadic 

%/jumandic.da: %
	sh $(SCRIPT_DIR)/update.sh -d $< 

